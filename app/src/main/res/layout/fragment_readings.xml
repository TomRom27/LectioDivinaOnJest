<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_red"
    tools:context="com.tr.onjestslowo.app.ReadingsActivity.ReadingPlaceholderFragment">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_w_old_paper"
            android:layout_marginLeft="@dimen/reading_inner_margin"
            android:layout_marginRight="@dimen/reading_inner_margin"
            android:layout_marginBottom="@dimen/reading_inner_margin">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_no_readings"
                android:id="@+id/titleView"
                android:textColor="@color/reading_title_color_brownish"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold|italic" />
            <WebView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/readingWebView"
                android:fontFamily="sans-serif-condensed" />
            <!-- thw web view is transparent thanks to programmatically setting the background color-->

        </LinearLayout>

</RelativeLayout>
