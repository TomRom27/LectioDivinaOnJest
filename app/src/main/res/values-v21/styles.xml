<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme.
    actual is decided in the code, see AppThemeHelper
    -->
    <style name="AppTheme" parent="AppThemeDark"/>

    <style name="AppThemeLight" parent="Theme.AppCompat">
        <item name="app_backgroundImg">@color/lectioCream</item>

        <item name="scrollView_marginBottom">5dp</item>
        <item name="scrollView_marginLeft">5dp</item>
        <item name="scrollView_marginRight">5dp</item>

        <item name="webViewHost_backgroundImg">@color/lectioCream</item>

        <item name="closeButton_visibility">2</item>

        <item name="colorPrimary">@color/lectioBrown</item>
        <item name="colorPrimaryDark">@color/lectioDarkBrown</item>
        <item name="colorAccent">@color/lectioCream</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="webView_textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppThemeDark" parent="AppThemeLight">
        <item name="app_backgroundImg">@color/lectioDirtyCream</item>

        <item name="webViewHost_backgroundImg">@color/lectioDirtyCream</item>

        <item name="colorPrimary">@color/lectioBrown</item>
        <item name="colorPrimaryDark">@color/lectioDarkBrown</item>
        <item name="colorAccent">@color/lectioDirtyCream</item>
    </style>
</resources>