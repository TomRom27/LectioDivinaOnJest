<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- the below declaration is for API level >=11
            (so it can cause warning displayed if min target is 10)
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility i.e. for target 10 and below -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bg_red_top_long</item>

        <!-- Support library compatibility i.e. for target 10 and below -->
        <item name="background">@drawable/bg_red_top_long</item>
    </style>
</resources>
