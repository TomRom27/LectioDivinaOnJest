<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Classics"/>

    <!-- style -->
    <style name="AppTheme.Classics" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="app_backgroundImg">@drawable/bg_red</item>

        <item name="scrollView_marginBottom">12dp</item>
        <item name="scrollView_marginLeft">12dp</item>
        <item name="scrollView_marginRight">12dp</item>

        <item name="webViewHost_backgroundImg">@drawable/bg_w_old_paper</item>

        <item name="closeButton_visibility">0</item> <!-- visible -->

        <item name="actionBarStyle">@style/ActionBar.Classic</item>

        <item name="actionOverflowButtonStyle">@style/ClassicMenuButton</item>
        <item name="android:actionOverflowButtonStyle">@style/ClassicMenuButton</item>
        <!-- the below declaration is for API level >=11
            (so it can cause warning displayed if min target is 10)

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        -->

    </style>
    <style name="ClassicMenuButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_refresh</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Classic" parent="">
        <item name="android:background">@drawable/bg_red_top_long</item>
    </style>

<!--
        <item name="android:layout_height">42dp</item>
http://stackoverflow.com/questions/26300480/how-to-change-option-menu-icon-in-the-action-bar
-->

    <!-- Material -->
    <style name="AppTheme.Target" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <!-- buttons styles -->
    <!-- Close button style -->
    <style name="closeButton_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginBottom">@dimen/reading_inner_margin</item>
        <item name="android:background">@color/reading_title_color_brownish</item>
        <item name="android:text">@string/button_close</item>
        <item name="android:textColor">@color/cream_white</item>
    </style>

</resources>
